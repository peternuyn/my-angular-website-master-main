{
  "hosting": {
    "site": "myresume01",
    "public": "dist/my-angular-website/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/health",
        "function": "health"
      },
      {
        "source": "/api/resumes/upload",
        "function": "uploadResume"
      },
      {
        "source": "/api/resumes/search/**",
        "function": "searchResumes"
      },
      {
        "source": "/api/resumes/user/**",
        "function": "getUserResume"
      },
      {
        "source": "/api/resumes/*/download",
        "function": "downloadResume"
      },
      {
        "source": "/api/resumes/*/view",
        "function": "viewResume"
      },
      {
        "source": "/api/resumes/*",
        "function": "getResume"
      },
      {
        "source": "/api/resumes",
        "function": "getAllResumes"
      },
      {
        "source": "/api/projects/create",
        "function": "createProject"
      },
      {
        "source": "/api/projects/user/**",
        "function": "getUserProjects"
      },
      {
        "source": "/api/projects/*",
        "function": "getProject"
      },
      {
        "source": "/api/projects",
        "function": "getAllProjects"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ]
}
